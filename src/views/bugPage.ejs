<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link href="/bugPage.css" rel="stylesheet" type="text/css" />
    <script
      src="https://kit.fontawesome.com/4747e8ca62.js"
      crossorigin="anonymous"
    ></script>
    <title>Bug Page</title>
  </head>
  <body>
    <div id="mainContainer">
      <div id="headerDiv">
        <div id="bugPic1">
          <img src="/bug.webp" alt="bugImage" />
        </div>
        <div id="headingBuggify">BUGGIFY</div>
        <div id="goHomepage">
          <!-- <button data-bs-toggle="modal" data-bs-target="#addProjectmodal">
            <i class="fa-solid fa-folder-plus"></i>
          </button> -->
          <button id="goHomepageButton">
            <i class="fa-solid fa-house"></i>
          </button>
        </div>
        <div id="bugPic2">
          <img src="/bug.webp" alt="bugImage" />
        </div>
      </div>
      <div id="bugTablediv">
        <table id="bugTable">
          <thead class="tableHead">
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Title</th>
              <th scope="col">Description</th>
              <th scope="col">Labels</th>
              <th scope="col">Author</th>
            </tr>
          </thead>
          <tbody>
            <% bugs.forEach(bug=>{ %>
            <tr>
              <td><%= bug._id %></td>
              <td><%= bug.title %></td>
              <td><%= bug.description %></td>
              <td><%= bug.labels %></td>
              <td><%= bug.author %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <div id="addNewbug">
        <button
          id="addNewbugButton"
          data-bs-toggle="modal"
          data-bs-target="#addBugmodal"
        >
          <i class="fa-solid fa-plus"></i>
        </button>
      </div>
      <div
        class="modal fade"
        id="addBugmodal"
        tabindex="-1"
        aria-labelledby="addBugmodalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="addBugmodalLabel">
                Add new Bug
              </h1>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <!-- form to submit new project -->
              <form action="/api/bug/createBug" method="post" id="addBugform">
                <div class="mb-3">
                  <label for="title" class="form-label">Name of Bug:</label>
                  <input
                    type="text"
                    class="form-control"
                    id="title"
                    name="title"
                  />
                  <div id="titleError" class="form-text errorDiv"></div>
                </div>
                <div class="mb-3">
                  <label for="description" class="form-label"
                    >Description:</label
                  >
                  <input
                    type="text"
                    class="form-control"
                    id="description"
                    name="description"
                  />
                  <div id="descriptionError" class="form-text errorDiv"></div>
                </div>
                <div class="mb-3">
                  <label for="author" class="form-label">Author:</label>
                  <input
                    type="text"
                    class="form-control"
                    id="author"
                    name="author"
                  />
                  <div id="authorError" class="form-text errorDiv"></div>
                </div>
                <div class="mb-3">
                  <label for="labels" class="form-label">Labels:</label>
                  <div id="addedLabels"></div>
                  <div id="newlabel">
                    <input
                      type="text"
                      class="form-control"
                      id="labels"
                      name="labels"
                      oninput="showDropdown()"
                    />
                    <button class="btn btn-primary" id="attachLabel">
                      <i class="fa-solid fa-paperclip"></i>
                    </button>
                  </div>
                  <div id="labelDropdown" style="display: none"></div>
                  <div id="labelsError" class="form-text errorDiv"></div>
                </div>
                <button
                  id="addBugformSubmit"
                  type="submit"
                  class="btn btn-primary"
                >
                  Add
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="/bugPage.js"></script>
  </body>
</html>
